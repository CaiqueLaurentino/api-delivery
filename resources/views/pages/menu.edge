<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ store.name }} - Cardápio</title>
  @vite(['resources/css/app.css', 'resources/js/menu.js'])
  <style>
    /* Categoria ativa será destacada */
    .active-category {
      color: #ef4444;
      /* Vermelho */
      font-weight: bold;
    }
  </style>
</head>

<body class="bg-gray-50">

  <!-- Cabeçalho da loja -->
  <header class="bg-white shadow p-4 text-center">
    <img src="{{ store.logo_url || 'https://via.placeholder.com/100' }}" alt="{{ store.name }} Logo"
      class="mx-auto w-20 h-20 object-cover rounded-full">
    <h1 class="text-xl font-bold text-gray-900 mt-2">{{ store.name }}</h1>
    <p class="text-sm text-gray-600">{{ store.address }}</p>
    <p class="text-sm text-gray-600">Contato: {{ store.contact_info }}</p>
  </header>

  <!-- Produtos da loja -->
  <div class="container mx-auto px-4 py-6">
    <h2 class="text-xl font-semibold mb-4">Cardápio</h2>

    <!-- Lista horizontal de categorias fixa abaixo de "Cardápio" com full width -->
    <div class="bg-white shadow p-4 sticky top-0 z-10 w-full overflow-x-auto whitespace-nowrap">
      <div id="category-list" class="flex space-x-4">
        @each(category in store.categories)
        <a href="#category-{{ category.id }}" id="link-category-{{ category.id }}"
          class="text-sm font-semibold text-gray-700 hover:text-red-500 transition-colors">{{
          category.name }}</a>
        @end
      </div>
    </div>

    <!-- Loop pelas categorias -->
    @each(category in store.categories)
    <div class="mb-6 category-section" id="category-{{ category.id }}">
      <!-- Nome da categoria -->
      <h3 class="text-lg font-bold text-gray-800 mb-3">{{ category.name }}</h3>

      <!-- Grid de produtos por categoria -->
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        @each(product in category.products)
        <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col justify-between">
          <div>
            <div class="relative">
              <img src="{{ product.image_url || 'https://via.placeholder.com/300x200' }}" alt="{{ product.name }}"
                class="w-full h-32 object-cover">
              @if(product.is_out_of_stock)
              <span class="absolute top-0 right-0 bg-red-500 text-white text-xs px-2 py-1">Esgotado</span>
              @endif
            </div>

            <div class="p-3">
              <h3 class="text-sm font-medium text-gray-900">{{ product.name }}</h3>
              <!-- Limitar descrição a 2 linhas -->
              <p class="text-xs text-gray-500 line-clamp-2">{{ product.description || 'Sem descrição disponível.' }}</p>
            </div>
          </div>

          <!-- Preço e botão de ação sempre alinhados -->
          <div class="flex items-center justify-between p-3 mt-auto min-h-[56px]">
            <p class="text-sm font-bold text-green-500 flex items-center">
              <span class="mr-1">R$</span>{{ product.price }}
            </p>
            <button
              class="bg-red-500 text-white py-1 px-3 rounded-md text-sm hover:bg-red-600 transition disabled:bg-gray-400 disabled:cursor-not-allowed"
              {{ product.is_out_of_stock ? 'disabled' : '' }}>
              {{ product.is_out_of_stock ? 'Esgotado' : 'Adicionar' }}
            </button>
          </div>
        </div>
        @end
      </div>
    </div>
    @end

  </div>

</body>

</html>