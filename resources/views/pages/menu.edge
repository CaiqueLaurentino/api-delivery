<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ store.name }} - Cardápio</title>
  @vite(['resources/css/menu.css', 'resources/js/menu.js'])
</head>

<body class="bg-gray-50">

  <header
    class="bg-red-500 shadow-sm py-3 px-4 flex flex-col sm:flex-row justify-between items-center space-y-2 sm:space-y-0 header"
    style="background-color: {{ store.primary_color }};">
    <!-- Conteúdo do header -->
    <div class="flex items-center space-x-4">
      <img src="{{ store.logo.url }}" alt="{{ store.name }} Logo" class="w-12 h-12 object-cover rounded-full">
      <div class="flex flex-col header-text">
        <h1 class="text-lg font-semibold">{{ store.name }}</h1>
        <p class="text-xs">{{ store.address }}</p>
      </div>
    </div>
  </header>

  <!-- Produtos da loja -->
  <div class="container mx-auto px-4 py-6">
    <h2 class="text-xl font-semibold mb-4">Cardápio</h2>

    <!-- Campo de pesquisa -->
    <div class="mb-4">
      <input type="text" id="search-input" placeholder="Pesquisar produtos..."
        class="w-full p-2 border border-gray-300 rounded-md">
    </div>

    <!-- Lista horizontal de categorias fixa -->
    <div class="bg-white shadow p-4 sticky top-0 z-10 w-full overflow-x-auto whitespace-nowrap">
      <div id="category-list" class="flex space-x-4">
        @each(category in store.categories)
        <a href="#category-{{ category.id }}" id="link-category-{{ category.id }}"
          class="text-sm font-semibold text-gray-700 hover:text-red-500 transition-colors">{{ category.name }}</a>
        @end
      </div>
    </div>

    <!-- Loop pelas categorias -->
    @each(category in store.categories)
    <div class="mb-6 category-section" id="category-{{ category.id }}">
      <h3 class="text-lg font-bold text-gray-800 mb-3">{{ category.name }}</h3>

      <!-- Grid de produtos por categoria -->
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        @each(product in category.products)
        <div class="product-item bg-white rounded-lg shadow-md overflow-hidden flex flex-col justify-between">
          <div>
            <div class="relative">
              <img src="{{ product.image.url  }}" alt="{{ product.name }}" class="w-full h-32 object-cover">
              @if(product.is_active)
              <span class="absolute top-0 right-0 bg-red-500 text-white text-xs px-2 py-1">Esgotado</span>
              @endif
            </div>

            <div class="p-3">
              <h3 class="text-sm font-medium text-gray-900">{{ product.name }}</h3>
              <p class="text-xs text-gray-500 line-clamp-2">{{ product.description || 'Sem descrição disponível.' }}</p>
            </div>
          </div>
          <!-- Preço e botão de adicionar -->
          <div class="flex items-center justify-between p-3 mt-auto min-h-[56px] gap-2">
            <p class="text-sm font-bold text-green-500 flex items-center whitespace-nowrap">
              <span class="mr-1">R$</span>{{ product.price }}
            </p>
            <button
              class="bg-red-500 text-white py-1 px-3 rounded-md text-sm hover:bg-red-600 transition disabled:bg-gray-400 disabled:cursor-not-allowed"
              style="flex-shrink: 0;" {{ product.is_active ? 'disabled' : '' }}>
              {{ product.is_active ? 'Esgotado' : 'Adicionar' }}
            </button>
          </div>
        </div>
        @end

      </div>
    </div>
    @end

  </div>

  {{-- Carrinho --}}
  @component('components/cart', { })

  @end

</body>

</html>