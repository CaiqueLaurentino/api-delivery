<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ store.name }} - Cardápio</title>
  @vite(['resources/css/app.css', 'resources/js/menu.js'])
</head>

<body class="bg-gray-50">

  <!-- Cabeçalho da loja - Modernizado e menor -->
  <header
    class="bg-red-500 shadow-sm py-3 px-4 flex flex-col sm:flex-row justify-between items-center space-y-2 sm:space-y-0">

    <!-- Logotipo e Nome da Loja -->
    <div class="flex items-center space-x-4">
      <img src="{{ store.logo_url || 'https://via.placeholder.com/100' }}" alt="{{ store.name }} Logo"
        class="w-12 h-12 object-cover rounded-full">
      <div class="flex flex-col">
        <h1 class="text-lg font-semibold text-white">{{ store.name }}</h1>
        <p class="text-xs text-gray-200">{{ store.address }}</p>
      </div>
    </div>

    <!-- Contato e Status organizados -->
    <div class="flex justify-between items-center space-x-6 sm:space-x-10 w-full sm:w-auto">
      <!-- Telefone para Contato -->
      <a href="{{ store.contact_info }}"
        class="text-sm font-medium text-white hover:underline flex items-center space-x-1">
        <!-- Ícone de Telefone -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor"
          stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M3 10.75v5a2.25 2.25 0 002.25 2.25h13.5A2.25 2.25 0 0021 15.75v-5A2.25 2.25 0 0018.75 8H5.25A2.25 2.25 0 003 10.75zM5.5 6.75V6a2.5 2.5 0 115 0v.75M12 12v3m0-3a3.5 3.5 0 107 0v3" />
        </svg>
        <span>{{ store.contact_info }}</span>
      </a>

      <!-- Status da Loja: Aberta ou Fechada -->
      <span class="text-sm font-semibold text-white py-1 px-3 rounded-full"
        :class="store.is_open ? 'bg-green-500' : 'bg-gray-400'">
        {{ store.is_open ? 'Aberta' : 'Fechada' }}
      </span>
    </div>
  </header>


  <!-- Produtos da loja -->
  <div class="container mx-auto px-4 py-6">
    <h2 class="text-xl font-semibold mb-4">Cardápio</h2>

    <!-- Lista horizontal de categorias fixa abaixo de "Cardápio" com full width -->
    <div class="bg-white shadow p-4 sticky top-0 z-10 w-full overflow-x-auto whitespace-nowrap">
      <div id="category-list" class="flex space-x-4">
        @each(category in store.categories)
        <a href="#category-{{ category.id }}" id="link-category-{{ category.id }}"
          class="text-sm font-semibold text-gray-700 hover:text-red-500 transition-colors">{{ category.name }}</a>
        @end
      </div>
    </div>

    <!-- Loop pelas categorias -->
    @each(category in store.categories)
    <div class="mb-6 category-section" id="category-{{ category.id }}">
      <!-- Nome da categoria -->
      <h3 class="text-lg font-bold text-gray-800 mb-3">{{ category.name }}</h3>

      <!-- Grid de produtos por categoria -->
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        @each(product in category.products)
        <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col justify-between">
          <div>
            <div class="relative">
              <img src="{{ product.image_url || 'https://via.placeholder.com/300x200' }}" alt="{{ product.name }}"
                class="w-full h-32 object-cover">
              @if(product.is_out_of_stock)
              <span class="absolute top-0 right-0 bg-red-500 text-white text-xs px-2 py-1">Esgotado</span>
              @endif
            </div>

            <div class="p-3">
              <h3 class="text-sm font-medium text-gray-900">{{ product.name }}</h3>
              <!-- Limitar descrição a 2 linhas -->
              <p class="text-xs text-gray-500 line-clamp-2">{{ product.description || 'Sem descrição disponível.' }}</p>
            </div>
          </div>

          <!-- Preço e botão de ação sempre alinhados -->
          <div class="flex items-center justify-between p-3 mt-auto min-h-[56px] gap-2">
            <p class="text-sm font-bold text-green-500 flex items-center whitespace-nowrap">
              <span class="mr-1">R$</span>{{ product.price }}
            </p>
            <button
              class="bg-red-500 text-white py-1 px-3 rounded-md text-sm hover:bg-red-600 transition disabled:bg-gray-400 disabled:cursor-not-allowed"
              style="flex-shrink: 0;" {{ product.is_out_of_stock ? 'disabled' : '' }}>
              {{ product.is_out_of_stock ? 'Esgotado' : 'Adicionar' }}
            </button>
          </div>

        </div>
        @end
      </div>
    </div>
    @end

  </div>

  <!-- Rodapé fixo para o carrinho -->
  <div class="fixed bottom-0 left-0 w-full bg-white shadow-md flex justify-between p-4 items-center z-50">
    <div class="flex flex-col gap-1">
      <p class="text-xs">Total de itens: <span id="total-items">0</span></p>
      <p class="text-sm font-bold text-green-500">R$ <span id="total-amount">0,00</span></p>
    </div>
    <div
      class="bg-red-500 text-white py-2 px-4 rounded-lg font-bold cursor-pointer hover:bg-red-600 transition flex items-center gap-2"
      onclick="openCart()">
      <!-- Ícone de carrinho -->
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"
        stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2 9m15-9l-2 9m-5-9v9" />
      </svg>
      <span>Ver Carrinho</span>
    </div>
  </div>

</body>

</html>